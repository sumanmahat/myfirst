<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="classworkshop.com.workshop1.HomePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#1af"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mobiles"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_phone_android_black_24dp" />

            <TextView android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobiles"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#FFFB11FF"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bikes"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_directions_bike_black_24dp" />

            <TextView
                android:id="@+id/bike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bikes"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="#b5bef4"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView  android:id="@+id/cars"
                android:src="@drawable/ic_directions_car_black_24dp"
                android:layout_width="75dp"
                android:layout_height="75dp" />

            <TextView android:id="@+id/car"
                android:text="Cars" android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="#e74f6d"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/laptops"
                android:src="@drawable/ic_laptop_black_24dp"
                android:layout_width="75dp"
                android:layout_height="75dp" />

            <TextView android:id="@+id/laptop"
                android:text="Laptop" android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="#8aa918"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/cameras"
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:layout_width="78dp"
                android:layout_height="75dp" />

            <TextView android:id="@+id/camera"
                android:text="Camera" android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="#b1eac6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/houses"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_width="75dp"
                android:layout_height="75dp" />

            <TextView android:id="@+id/house"
                android:text="House" android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
